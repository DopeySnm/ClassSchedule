<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lesson_round_corner_full">

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_day_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Понедельник"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RCview_lessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/name_day_week"
            app:layout_constraintEnd_toEndOf="@+id/name_day_week"
            app:layout_constraintTop_toBottomOf="@+id/name_day_week"/>

</androidx.constraintlayout.widget.ConstraintLayout>